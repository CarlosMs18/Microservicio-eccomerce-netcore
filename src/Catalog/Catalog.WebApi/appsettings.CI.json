{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Debug" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Catalog": "Information",
        "Catalog.Infrastructure": "Information",
        "Catalog.Application": "Information",
        "Catalog.WebAPI": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Environment": "CI"
    }
  },
  "ConnectionParameters": {
    "server": "localhost,1433",
    "database": "CatalogDB_CI", 
    "user": "sa",
    "password": "P@ssw0rd123!",
    "trust": "true"
  },
  "ConnectionPooling": {
    "pooling": "true",
    "maxPoolSize": "5",
    "minPoolSize": "1",
    "connectionTimeout": "30",
    "commandTimeout": "30"
  },
  "ServiceParameters": {
    "host": "localhost",
    "port": "5005"
  },
  "Catalog": {
    "DatabaseName": "CatalogDB_CI"
  },
  "RabbitMQParameters": {
    "host": "localhost",
    "port": "5672",
    "username": "guest",
    "password": "guest",
    "virtualhost": "/"
  },
  "HttpClientPolicies": {
    "RetryCount": 2,
    "RetryDelaySec": 2,
    "CircuitBreakerFailures": 5,
    "CircuitBreakerDurationSec": 30
  },
  "Ports": {
    "Rest": 7210,
    "Grpc": 7212
  }
}